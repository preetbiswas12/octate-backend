{
  "name": "octate-collaboration-backend",
  "version": "1.0.0",
  "description": "Backend for Octate multiplayer collaboration features using Supabase + Render",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:watch": "tsx --watch src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "render:deploy": "git push render main",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:generate-types": "supabase gen types typescript --local > lib/supabase-types.ts",
    "db:init": "tsx scripts/init-database.ts",
    "test:connection": "tsx scripts/test-connection.ts",
    "deploy:backend": "npm run build && npm run render:deploy"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "y-websocket": "^1.5.0",
    "yjs": "^13.6.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.6",
    "supabase": "^1.226.4",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "collaboration",
    "multiplayer",
    "real-time",
    "supabase",
    "render",
    "express",
    "websocket",
    "vscode"
  ],
  "license": "MIT"
}
